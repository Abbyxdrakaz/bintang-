  <!-- Script -->
  <script>
    function createLove() {
      const love = document.createElement('div');
      love.className = 'love';
      love.style.left = Math.random() * window.innerWidth + 'px';
      document.body.appendChild(love);
      setTimeout(() => love.remove(), 6000);
    }
    setInterval(createLove, 3000); // setiap 3 detik keluar love

    let currentPage = 1;
    function checkPassword() {
      const input = document.getElementById('password').value.trim().toLowerCase();
      if (input === "i love you") {
        nextPage();
      } else {
        alert("Kata sandi salah! Coba lagi yaa üå∏");
      }
    }
    function nextPage() {
      document.getElementById('page' + currentPage).classList.remove('active');
      currentPage++;
      const next = document.getElementById('page' + currentPage);
      if (next) next.classList.add('active');
    }
  </script>

